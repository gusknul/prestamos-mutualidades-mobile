<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:columnCount="59"
    android:orientation="vertical" >

    <Space android:layout_row="3" />

    <Space android:layout_row="4" />

    <Space android:layout_row="4" />


    <RelativeLayout
        android:layout_width="142dp"
        android:layout_height="140dp"
        android:layout_column="1"
        android:layout_gravity="left|fill_vertical"
        android:layout_row="4" >

        <ListView
            android:id="@+id/lViewMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff" >
        </ListView>
    </RelativeLayout>

  <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="350dp"
        android:layout_column="2"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        android:background="#fff0fff0" >

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="41dp"
            android:text="TextView"
            android:textSize="16sp"/>

      
        
    </RelativeLayout>

    <TextView
        android:id="@+id/tViewBuscar"
        android:layout_height="16dp"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="2"
        android:text="@string/BuscarSocio"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txtBuscar"
        android:layout_width="88dp"
        android:layout_column="2"
        android:layout_gravity="left|center_vertical"
        android:layout_row="2"
        android:background="#ffffff"
        android:ems="10" >
    </EditText>

    <Space
        android:layout_width="1dp"
        android:layout_height="5dp"
        android:layout_column="4" />
    <Button
        android:id="@+id/searchMenber"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_column="5"
        android:layout_gravity="left|center"
        android:layout_row="2"
        android:background="#ffffff"
        android:text="@string/Buscar"/>

    <Button
        android:id="@+id/RegisterReceive"
        android:layout_width="110dp"
        android:layout_column="2"
        android:layout_gravity="left|center_vertical"
        android:layout_row="6"
        android:background="#ffffff"
        android:text="@string/RegistrarCobro" />

    <TextView
        android:id="@+id/totalCobranza"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="6"
        android:text="@string/Cobranza"
        android:textColor="#ffffff"
        android:textSize="16sp" 
        />

</GridLayout>
